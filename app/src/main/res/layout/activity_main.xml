<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.administrador.sharedata.MainActivity">

    <EditText
        android:id="@+id/editTextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/editTextmargin"
        android:layout_marginRight="@dimen/editTextmargin"
        android:hint="@string/editTextMainHint" />

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/obrirButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_below="@+id/editTextMain"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_open_in_new_black_24dp"
            android:padding="@dimen/buttonspadding" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_share_black_24dp"
            android:padding="@dimen/buttonspadding" />

        <Button
            android:id="@+id/webButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_below="@+id/editTextMain"
            android:layout_gravity="center"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_web_black_24dp"
            android:padding="@dimen/buttonspadding" />

        <Button
            android:id="@+id/emailButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_email_black_24dp"
            android:padding="@dimen/buttonspadding" />

        <Button
            android:id="@+id/mapsButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_location_on_black_24dp"
            android:padding="@dimen/buttonspadding" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_save_black_24dp"
            android:padding="@dimen/buttonspadding" />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="@dimen/buttonsSize"
            android:layout_height="@dimen/buttonsSize"
            android:layout_gravity="center"
            android:layout_margin="@dimen/buttonMargin"
            android:background="@drawable/ic_date_range_black_24dp"
            android:padding="@dimen/buttonspadding" />



    </LinearLayout>

</RelativeLayout>